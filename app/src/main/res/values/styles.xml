<resources 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tempus="http://schemas.android.com/apk/res/me.tempus.headspace.picture.puzzle">

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="MainMenuButton" parent="android:Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/mainmenu_buttonbackground_gradient_on</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">15dp</item>
    </style>
    
    <style name="gameButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_margin">7dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/headspace_green</item>
    </style>
    
</resources>